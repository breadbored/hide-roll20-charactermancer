{
	"name": "Hide R20 Charactermancer",
	"version": "0.0.1",
	"description": "An extension to hide the Charactermancer from your players until it is time to level up, due to a recent change to Roll 20 that has confused players.",
	"homepage_url": "https://github.com/breadbored",
	"manifest_version": 2,
	"minimum_chrome_version": "100",
	"browser_specific_settings": {
		"gecko": {
			"id": "hide-charactermancer@bread.codes",
			"strict_min_version": "100.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://app.roll20.net/editor/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://app.roll20.net/editor/*" ],
			"js": [ "content.js" ],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"browser_style": true,
		"page": "options.html"
	}
}
